        ></sw-text-field>
        <sw-password-field
            required
            :label="$t('heptacomAdminOpenAuthClient.providerFields.microsoft_entra_id_oidc.clientSecret')"
            v-model:value="item.config.clientSecret"
        ></sw-password-field>
